<h2><%= t('.header') %></h2>

<% @user_awards.each do |award| %>
  <div class="d-flex mt-3">
    <a href="<%= badge_path(award[:badge]) %>" class="position-relative">
      <%= badge_image(award[:badge]) %>
      <span class=" badge rounded-pill position-absolute start-0 top-0 fs-6" style="background-color: #f48c60">
        x <%= award[:count] %>
      </span>
    </a>
  </div>
<% end %>

<div class="mt-3 mb-4"><%= link_to t('.link_badges'), badges_path %></div>
