<% if resource.present? && resource.errors.any? %>
    <%= content_tag :div, class: 'text-danger ms-3 resource-errors', data: { resource_id: resource.id } do %>
      <div><%= t('.header', count: resource.errors.count) %>:</div>
            
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
