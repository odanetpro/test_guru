<%= form_with(model: [:admin, @test], local: true) do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level %>
  </p>
  <p>
    <%= form.label :category_id %>:<br>
    <%= form.collection_select :category_id, all_categories, :id, :title, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>
