<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.check_box :correct %>
    <%= form.label :correct %><br>
  </p>

  <p><%= form.submit %></p>
<% end %>
