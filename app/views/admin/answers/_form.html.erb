<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body, class: 'form-control' %>
  </p>
  <p>
    <%= form.check_box :correct, class: 'form-check-input' %>
    <%= form.label :correct, class: 'form-check-label ms-1' %><br>
  </p>

  <p><%= form.submit class: 'btn btn-primary' %></p>
<% end %>
